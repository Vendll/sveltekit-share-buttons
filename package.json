{
	"name": "sveltekit-share-buttons",
	"version": "2.0.0",
	"license": "BSD-3-Clause",
	"description": "Svelte share buttons: adding social share buttons to your Svelte app for mobiles and Safari using the native Web Share API with fallbacks.",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --fail-on-hints",
		"check:watch": "svelte-check --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
		"format": "prettier --write --plugin-search-dir=. .",
		"generate:images": "node ./generate-responsive-image-data.js",
		"generate:manifest": "node ./generate-manifest.js",
		"generate:sitemap": "node ./generate-sitemap.js",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.4.2",
		"@fontsource/lato": "^4.5.10",
		"@fontsource/lora": "^4.5.13",
		"@fontsource/source-sans-pro": "^4.5.11",
		"@iconify/svelte": "^3.1.0",
		"@rodneylab/sveltekit-components": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.5.3",
		"@types/object-hash": "^3.0.2",
		"commitlint": "^17.4.2",
		"dayjs": "^1.11.7",
		"dotenv": "^16.0.3",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"front-matter": "^4.0.2",
		"husky": "^8.0.3",
		"leaflet": "^1.9.3",
		"mdsvex": "^0.10.6",
		"object-hash": "^3.0.0",
		"postcss": "^8.4.21",
		"postcss-html": "^1.5.0",
		"prettier": "~2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"reading-time": "1.4.0",
		"sass": "^1.58.0",
		"sharp": "^0.31.3",
		"stylelint": "^15.0.0",
		"stylelint-config-recommended-scss": "^8.0.0",
		"stylelint-config-standard": "^30.0.1",
		"stylelint-scss": "^4.3.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.3",
		"svelte-preprocess": "^5.0.1",
		"vanilla-lazyload": "^17.8.3",
		"vite": "^4.1.1",
		"vite-imagetools": "^4.0.18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-share-buttons"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-share-buttons/issues"
	},
	"type": "module",
	"peerDependencies": {
		"leaflet": "^1.8.0",
		"vite": "^3.1.0-beta.1"
	}
}
